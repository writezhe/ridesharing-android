<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:background="@drawable/log_bg"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:background="@android:color/transparent"
            android:layout_height="50dp" />


        <TextView
            android:id="@+id/login_welcoming_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="40dp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/login_activity_welcoming_message"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/application_name"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:textSize="40dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/application_name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:height="120dp"
            android:hint="@string/action_relogin_pass"
            android:padding="16dp"
            android:autofillHints="@font/roboto_bold"
            android:textColor="#ffffff"
            android:textScaleX="1.2"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_corner"
            android:inputType="textPassword">

            <requestFocus />
        </EditText>

        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/login_button"
            android:elevation="2dp"
            android:background="@drawable/rounded_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="loginButton"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:text="@string/title_activity_login_string" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/forgot_password_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="forgotPassword"
            android:text="@string/title_activity_forgot_password" />

</LinearLayout>